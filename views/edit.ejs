<% layout("layouts/boilerplate") -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Create a edit Listing</h3>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input value="<%=listing.title%>" name="listing[title]" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="Description" class="form-label">Description:</label>
                <textarea name="listing[description]" type="text" class="form-control"><%=listing.description%></textarea>
                </div>
                <div class="row">

                    <div class="mb-3 col-md-4">
                        <label for="Location" class="form-label">Location:</label>
                        <input value="<%= listing.location%>" name="listing[locaion]" type="text" class="form-control">
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="Country" class="form-label">Country:</label>
                        <input value="<%=listing.country%>" name="listing[country]" type="text" class="form-control">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <input value="<%=listing.price%>" name="listing[price]" type="number" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image:</label>
                    <input value="<%=listing.image%>" name="listing[image]" type="text" class="form-control"><br><br>
                </div>
                <button class="btn btn-dark edit-btn mb-5">Edit</button>
            </form>
        </div>
    </div>
    
</body>
</html>